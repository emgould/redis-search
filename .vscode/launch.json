
{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python: API Debug",
      "type": "python",
      "request": "launch",
      "program": "src/search_api/main.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: ETL Debug",
      "type": "python",
      "request": "launch",
      "program": "src/etl/run_etl.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Web Debug",
      "type": "python",
      "request": "launch",
      "program": "web/app.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/firebase/python_functions",
      "env": {  
        "PYTHONPATH": "${workspaceFolder}/firebase/python_functions",
        "FIREBASE_AUTH_EMULATOR_HOST": "localhost:9099"
      },
      "envFile": "${workspaceFolder}/firebase/python_functions/.env",
      "justMyCode": false
    },
  ]
}
